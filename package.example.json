{
  "name": "bloom-marketing-website",
  "version": "1.0.0",
  "description": "Performance-optimized marketing website for Bloom extraction FPS game",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run optimize:images && npm run optimize:fonts && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "optimize:images": "bash scripts/optimize-images.sh",
    "optimize:fonts": "bash scripts/subset-fonts.sh",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "lighthouse http://localhost:4321 --preset=desktop --view",
    "lighthouse:mobile": "lighthouse http://localhost:4321 --preset=mobile --view",
    "perf:audit": "npm run build && npm run preview & sleep 5 && npm run lighthouse && kill %1",
    "test": "npm run build && npm run lighthouse",
    "format": "prettier --write \"src/**/*.{astro,js,jsx,ts,tsx,md,mdx,json}\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,astro}\"",
    "check": "astro check"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "astro": "^4.0.0",
    "astro-compress": "^2.2.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "bloom",
    "game",
    "marketing",
    "astro",
    "performance",
    "fps",
    "extraction"
  ],
  "author": "Bloom Development Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/bloom-website.git"
  }
}
