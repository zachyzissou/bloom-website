{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bloom-game.com/schemas/biome.schema.json",
  "title": "Biome",
  "description": "Schema for biome data in Bloom marketing website",
  "type": "object",
  "required": ["id", "name", "displayName", "threatLevel", "factionPresence", "visualCharacteristics"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique biome identifier (kebab-case)",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "examples": ["snowpeaks", "western-mountains", "eastern-plateaus"]
    },
    "name": {
      "type": "string",
      "description": "Biome name (PascalCase for internal use)",
      "minLength": 2,
      "maxLength": 50,
      "examples": ["SnowPeaks", "WesternMountains"]
    },
    "displayName": {
      "type": "string",
      "description": "Human-readable display name with spaces",
      "minLength": 2,
      "maxLength": 100,
      "examples": ["Snow Peaks", "Western Mountains"]
    },
    "threatTier": {
      "type": "string",
      "description": "Threat tier classification (format: H# where # is 1-5)",
      "pattern": "^H[1-5]$",
      "examples": ["H1", "H2", "H3"]
    },
    "threatLevel": {
      "type": "string",
      "description": "Human-readable threat level",
      "enum": ["Low", "Medium", "High", "Extreme"]
    },
    "location": {
      "type": "string",
      "description": "Geographic location descriptor",
      "minLength": 2,
      "maxLength": 50,
      "examples": ["North", "West", "East", "South", "Central"]
    },
    "launchStatus": {
      "type": "string",
      "description": "Launch window status for biome availability",
      "enum": ["ea-launch", "expansion-1", "expansion-2", "planned"]
    },
    "launchWindow": {
      "type": "string",
      "description": "Human-readable launch window label",
      "examples": ["EA Launch", "Expansion 1"]
    },
    "geography": {
      "type": "string",
      "description": "Geographic description of the biome",
      "minLength": 10,
      "maxLength": 500
    },
    "macroFeatures": {
      "type": "array",
      "description": "Large-scale geographic features",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "visualCharacteristics": {
      "type": "object",
      "description": "Visual and environmental characteristics of the biome",
      "required": ["climate", "temperature", "weather", "visibility", "terrain"],
      "properties": {
        "climate": {
          "type": "string",
          "description": "Climate classification",
          "minLength": 2,
          "maxLength": 50,
          "examples": ["Arctic", "Temperate", "Arid", "Tropical"]
        },
        "temperature": {
          "type": "string",
          "description": "Temperature description",
          "minLength": 2,
          "maxLength": 100,
          "examples": ["Below freezing", "Moderate", "Hot", "Extreme cold"]
        },
        "weather": {
          "type": "array",
          "description": "Weather conditions typical to the biome",
          "items": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100
          },
          "minItems": 1,
          "uniqueItems": true,
          "examples": [["Heavy snow", "Blizzards", "Ice storms"]]
        },
        "visibility": {
          "type": "string",
          "description": "Visibility conditions",
          "minLength": 2,
          "maxLength": 200,
          "examples": ["Low during storms", "Clear", "Moderate"]
        },
        "terrain": {
          "type": "string",
          "description": "Terrain description",
          "minLength": 5,
          "maxLength": 300,
          "examples": ["Steep slopes, icy surfaces", "Rocky outcrops, desert flats"]
        }
      },
      "additionalProperties": false
    },
    "keyFeatures": {
      "type": "array",
      "description": "Notable points of interest in the biome",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 200
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "factionPresence": {
      "type": "array",
      "description": "Factions active in this biome (must reference valid faction names)",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "minItems": 1,
      "uniqueItems": true,
      "examples": [["Directorate", "North Guard"]]
    },
    "hazards": {
      "type": "array",
      "description": "Environmental hazards present in the biome",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "uniqueItems": true
    },
    "resources": {
      "type": "array",
      "description": "Resources available for extraction in the biome",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "uniqueItems": true
    },
    "description": {
      "type": "string",
      "description": "Biome lore and marketing description",
      "minLength": 20,
      "maxLength": 1000
    },
    "lastSynced": {
      "type": "string",
      "description": "ISO 8601 timestamp of last wiki synchronization (optional)",
      "format": "date-time",
      "examples": ["2025-11-02T12:00:00Z"]
    }
  },
  "additionalProperties": false
}
