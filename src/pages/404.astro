---
/**
 * 404 Not Found Page
 * Custom error page with analytics tracking
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
---

<BaseLayout
  title="404 - Page Not Found | Bloom"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <section class="error-page">
    <h1>404</h1>
    <p class="error-message">Page not found in the wasteland</p>
    <p class="description">
      The page you're looking for has been harvested or never existed.
      Perhaps you'd like to return to safer territory?
    </p>
    <div class="cta-buttons">
      <Button href="/" variant="primary">Return Home</Button>
      <Button href="/factions" variant="secondary">Explore Factions</Button>
    </div>
  </section>

  <!-- Track 404 pages in analytics -->
  <script is:inline>
    // Track 404 in Plausible
    if (window.plausible) {
      window.plausible('404', {
        props: { path: window.location.pathname }
      });
    }
  </script>

  <style>
    .error-page {
      text-align: center;
      padding: 4rem 2rem;
      min-height: 80vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    h1 {
      font-size: clamp(4rem, 15vw, 10rem);
      margin-bottom: 1rem;
      background: linear-gradient(45deg, var(--color-secondary), var(--color-primary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .error-message {
      font-size: clamp(1.5rem, 4vw, 2.5rem);
      color: var(--color-gray);
      margin-bottom: 2rem;
    }

    .description {
      max-width: 500px;
      font-size: 1.125rem;
      line-height: 1.8;
      margin-bottom: 2rem;
      color: var(--color-gray);
    }

    /* Button Containers */
    .cta-buttons {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }
  </style>
</BaseLayout>
