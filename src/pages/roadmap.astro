---
/**
 * Development Roadmap Page - Bloom Marketing Website
 * Displays the development timeline from Early Access to Full Release
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import factionsData from '@/data/factions.json';
import biomesData from '@/data/biomes.json';
import roadmapData from '@/data/roadmap.json';

const { factions } = factionsData;
const { biomes } = biomesData;
const { developmentPhases, technicalRoadmap, keyMetrics } = roadmapData;

// Calculate faction counts by launch window
const eaLaunchFactions = factions.filter(f => f.launchStatus === 'ea-launch');
const expansion1Factions = factions.filter(f => f.launchWindow === 'Month 3-6');
const expansion2Factions = factions.filter(f => f.launchWindow === 'Month 6-9');

// Calculate biome counts by launch window
const eaLaunchBiomes = biomes.filter(b => b.launchStatus === 'ea-launch');
const expansion2Biomes = biomes.filter(b => b.launchWindow === 'Month 6-9');

// Timeline phases
const timeline = [
  {
    id: 'ea-launch',
    phase: 'Q2 2025',
    title: 'Early Access Launch',
    status: 'upcoming',
    highlights: [
      `${eaLaunchFactions.length} Factions: ${eaLaunchFactions.map(f => f.shortName).join(', ')}`,
      `${eaLaunchBiomes.length} Biomes: ${eaLaunchBiomes.map(b => b.displayName).join(', ')}`,
      'Core extraction gameplay loop',
      'Squad matchmaking system',
      'Character progression and unlocks',
      'PvPvE combat mechanics',
    ],
  },
  {
    id: 'expansion-1',
    phase: 'Month 3-6',
    title: 'Expansion 1: New Factions',
    status: 'planned',
    highlights: [
      `${expansion1Factions.length} New Factions: ${expansion1Factions.map(f => f.shortName).join(', ')}`,
      'New faction abilities and playstyles',
      'Balance updates and refinements',
      'Community-driven events',
      'Quality of life improvements',
      'First wave of community feedback integration',
    ],
  },
  {
    id: 'expansion-2',
    phase: 'Month 6-9',
    title: 'Expansion 2: World Expansion',
    status: 'planned',
    highlights: [
      `${expansion2Factions.length} New Factions: ${expansion2Factions.map(f => f.shortName).join(', ')}`,
      `${expansion2Biomes.length} New Biomes: ${expansion2Biomes.map(b => b.displayName).join(', ')}`,
      'New game modes',
      'Seasonal content system',
      'Advanced progression paths',
      'Expanded lore and world-building',
    ],
  },
  {
    id: 'full-release',
    phase: 'Q4 2025',
    title: 'Full Release',
    status: 'planned',
    highlights: [
      `All ${factions.length} factions available`,
      `All ${biomes.length} biomes available`,
      'Ranked competitive mode',
      'Full cosmetics system',
      'Player trading and marketplace',
      'Post-launch content roadmap announced',
    ],
  },
];

// Planned features for post-launch
const plannedFeatures = [
  {
    category: 'Customization',
    items: ['Weapon skins and attachments', 'Character cosmetics', 'Faction-themed gear sets', 'Victory animations'],
  },
  {
    category: 'Competitive',
    items: ['Ranked ladder system', 'Seasonal tournaments', 'Leaderboards and stats', 'Spectator mode'],
  },
  {
    category: 'Social',
    items: ['Guild/clan system', 'Voice chat integration', 'Friend referral rewards', 'Community hub'],
  },
  {
    category: 'Content',
    items: ['Limited-time events', 'Weekly challenges', 'Holiday themed content', 'Narrative campaigns'],
  },
];
---

<BaseLayout
  title="Development Roadmap - Bloom Game Timeline"
  description="Follow Bloom's development journey from Early Access launch through full release. See planned factions, biomes, features, and content updates throughout 2025."
  type="game"
>
  <!-- Hero Section -->
  <section class="roadmap-hero">
    <div class="hero-content">
      <h1>Development Roadmap</h1>
      <p class="tagline">Bloom's Journey from Early Access to Full Release</p>
      <p class="description">
        Witness the evolution of Bloom throughout 2025. From our Early Access launch with 4 factions
        and 6 biomes, to the full release featuring all 10 factions across 12 unique biomes. Every
        milestone brings new content, features, and opportunities for the community.
      </p>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="timeline-section">
    <div class="container">
      <h2 class="sr-only">Development Timeline</h2>
      <div class="timeline">
        {timeline.map((phase, index) => (
          <article class="timeline-phase" data-status={phase.status} id={phase.id}>
            {/* Timeline connector */}
            {index < timeline.length - 1 && (
              <div class="timeline-connector" aria-hidden="true"></div>
            )}

            {/* Phase marker */}
            <div class="phase-marker">
              <div class="marker-dot"></div>
              <span class="phase-label">{phase.phase}</span>
            </div>

            {/* Phase content */}
            <div class="phase-content">
              <div class="phase-header">
                <h3 class="phase-title">{phase.title}</h3>
                <span class={`status-badge status-${phase.status}`}>
                  {phase.status === 'upcoming' ? 'Upcoming' : 'Planned'}
                </span>
              </div>

              <ul class="highlights-list">
                {phase.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Technical Development Progress Section -->
  <section class="tech-progress-section">
    <div class="container">
      <h2 class="section-title">Technical Development Progress</h2>
      <p class="section-description">
        Transparent development tracking: See our current sprint status, completed milestones,
        and technical roadmap for Bloom's Early Access launch.
      </p>

      <!-- Current Sprint Status -->
      <div class="sprint-status-card">
        <div class="sprint-header">
          <h3>Current Sprint: {developmentPhases.currentSprint.name}</h3>
          <span class="sprint-week">Week {developmentPhases.currentSprint.week}</span>
        </div>
        <div class="progress-bar">
          <div class="progress-fill" style={`width: ${developmentPhases.currentSprint.progress}%`}></div>
          <span class="progress-label">{developmentPhases.currentSprint.progress}% Complete</span>
        </div>
        <p class="sprint-status">{developmentPhases.currentSprint.status}</p>
      </div>

      <!-- Key Technical Metrics -->
      <div class="metrics-box">
        <h3 class="metrics-title">Key Technical Metrics</h3>
        <div class="metrics-grid">
          <div class="metric-item">
            <span class="metric-label">Engine</span>
            <span class="metric-value">Unity {keyMetrics.technical.unityVersion}</span>
          </div>
          <div class="metric-item">
            <span class="metric-label">Pipeline</span>
            <span class="metric-value">{keyMetrics.technical.renderPipeline}</span>
          </div>
          <div class="metric-item">
            <span class="metric-label">Target FPS</span>
            <span class="metric-value">{keyMetrics.technical.targetFPS}</span>
          </div>
          <div class="metric-item">
            <span class="metric-label">Min Spec</span>
            <span class="metric-value">{keyMetrics.technical.minSpec}</span>
          </div>
          <div class="metric-item">
            <span class="metric-label">World Size</span>
            <span class="metric-value">{keyMetrics.technical.worldSize}</span>
          </div>
          <div class="metric-item">
            <span class="metric-label">Players</span>
            <span class="metric-value">{keyMetrics.technical.playerCapacity} concurrent</span>
          </div>
        </div>
      </div>

      <!-- Development Progress Grid -->
      <div class="dev-progress-grid">
        <!-- Completed Milestones -->
        <div class="progress-column">
          <h3 class="column-title">
            <span class="status-icon completed">✓</span>
            Completed Milestones
          </h3>
          <ul class="milestone-list">
            {technicalRoadmap.completed.map((item) => (
              <li class="milestone-item completed">
                <div class="milestone-header">
                  <strong>{item.feature}</strong>
                  {item.date && <span class="milestone-date">{item.date}</span>}
                </div>
                <p class="milestone-desc">{item.description}</p>
              </li>
            ))}
          </ul>
        </div>

        <!-- In Progress -->
        <div class="progress-column">
          <h3 class="column-title">
            <span class="status-icon in-progress">⟳</span>
            In Progress
          </h3>
          <ul class="milestone-list">
            {technicalRoadmap.inProgress.map((item) => (
              <li class="milestone-item in-progress">
                <div class="milestone-header">
                  <strong>{item.feature}</strong>
                  {item.status && <span class="milestone-date">{item.status}</span>}
                </div>
                <p class="milestone-desc">{item.description}</p>
                {item.priority && <span class={`priority-badge priority-${item.priority}`}>{item.priority}</span>}
              </li>
            ))}
          </ul>
        </div>

        <!-- Planned Features -->
        <div class="progress-column">
          <h3 class="column-title">
            <span class="status-icon planned">○</span>
            Planned Technical Features
          </h3>
          <ul class="milestone-list">
            {technicalRoadmap.planned.map((item) => (
              <li class="milestone-item planned">
                <div class="milestone-header">
                  <strong>{item.feature}</strong>
                  {item.status && <span class="milestone-date">{item.status}</span>}
                </div>
                <p class="milestone-desc">{item.description}</p>
                {item.priority && <span class={`priority-badge priority-${item.priority}`}>{item.priority}</span>}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Planned Features Section -->
  <section class="features-section">
    <div class="container">
      <h2 class="section-title">Planned Features</h2>
      <p class="section-description">
        Beyond factions and biomes, we're committed to delivering a rich and evolving experience
        with competitive features, customization options, and engaging content throughout 2025 and beyond.
      </p>

      <div class="features-grid">
        {plannedFeatures.map((category) => (
          <div class="feature-category">
            <h3 class="category-title">{category.category}</h3>
            <ul class="feature-list">
              {category.items.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>Stay Updated</h2>
      <p>
        Wishlist Bloom on Steam to be notified of launch dates, beta access opportunities,
        and major content updates.
      </p>
      <div class="cta-buttons">
        <a href="https://store.steampowered.com" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
          Wishlist on Steam
        </a>
        <a href="/" class="btn btn-secondary">
          Back to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .roadmap-hero {
    background: linear-gradient(180deg, rgba(0, 31, 63, 0.3) 0%, rgba(0, 0, 0, 0) 100%);
    padding: 4rem 2rem 3rem;
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--color-primary), #00aaff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .tagline {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    color: var(--color-gray);
    margin-bottom: 1.5rem;
    font-family: var(--font-heading);
  }

  .description {
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.125rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Timeline Section */
  .timeline-section {
    padding: 4rem 0;
  }

  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Timeline Phase */
  .timeline-phase {
    position: relative;
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
    padding-bottom: 3rem;
  }

  .timeline-phase:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
  }

  /* Timeline Connector */
  .timeline-connector {
    position: absolute;
    left: 60px;
    top: 80px;
    bottom: -3rem;
    width: 2px;
    background: linear-gradient(180deg, rgba(0, 255, 136, 0.3), rgba(0, 255, 136, 0.1));
  }

  .timeline-phase:last-child .timeline-connector {
    display: none;
  }

  /* Phase Marker */
  .phase-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .marker-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--color-primary);
    border: 4px solid #000;
    box-shadow: 0 0 0 4px rgba(0, 255, 136, 0.2);
    margin-bottom: 0.75rem;
    transition: all 0.3s ease;
  }

  .timeline-phase[data-status="planned"] .marker-dot {
    background: rgba(0, 255, 136, 0.5);
    box-shadow: 0 0 0 4px rgba(0, 255, 136, 0.1);
  }

  .timeline-phase:hover .marker-dot {
    transform: scale(1.2);
    box-shadow: 0 0 0 6px rgba(0, 255, 136, 0.3);
  }

  .phase-label {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--color-primary);
    font-family: var(--font-heading);
    text-align: center;
    white-space: nowrap;
  }

  /* Phase Content */
  .phase-content {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .phase-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--color-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .timeline-phase:hover .phase-content {
    border-color: rgba(0, 255, 136, 0.3);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.04));
    transform: translateX(4px);
    box-shadow: 0 10px 30px rgba(0, 255, 136, 0.1);
  }

  .timeline-phase:hover .phase-content::before {
    opacity: 1;
  }

  .phase-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .phase-title {
    font-size: 1.75rem;
    font-family: var(--font-heading);
    color: #fff;
    line-height: 1.2;
    flex: 1;
  }

  .status-badge {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .status-upcoming {
    background: rgba(0, 255, 136, 0.2);
    color: var(--color-primary);
    border: 1px solid rgba(0, 255, 136, 0.4);
  }

  .status-planned {
    background: rgba(255, 170, 0, 0.2);
    color: #ffaa00;
    border: 1px solid rgba(255, 170, 0, 0.4);
  }

  /* Highlights List */
  .highlights-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.75rem;
  }

  .highlights-list li {
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
    padding-left: 1.5rem;
    position: relative;
  }

  .highlights-list li::before {
    content: '▸';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-size: 1.125rem;
  }

  /* Technical Progress Section */
  .tech-progress-section {
    padding: 4rem 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 31, 63, 0.2) 50%, rgba(0, 0, 0, 0) 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Current Sprint Status Card */
  .sprint-status-card {
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.1), rgba(0, 170, 255, 0.05));
    border: 2px solid rgba(0, 255, 136, 0.3);
    border-radius: 1rem;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .sprint-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .sprint-header h3 {
    font-size: 1.5rem;
    font-family: var(--font-heading);
    color: var(--color-primary);
    margin: 0;
  }

  .sprint-week {
    font-size: 1.125rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    background: rgba(0, 255, 136, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-family: var(--font-heading);
  }

  .progress-bar {
    position: relative;
    height: 2.5rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 0.5rem;
    overflow: hidden;
    margin-bottom: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), #00cc6f);
    transition: width 0.5s ease;
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
  }

  .progress-label {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-weight: 700;
    font-size: 1rem;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    font-family: var(--font-heading);
    z-index: 1;
  }

  .sprint-status {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    line-height: 1.6;
  }

  /* Key Technical Metrics Box */
  .metrics-box {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .metrics-title {
    font-size: 1.5rem;
    font-family: var(--font-heading);
    color: #00aaff;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .metrics-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  .metric-item {
    flex: 0 0 200px;
    max-width: 100%;
  }

  .metrics-grid .metric-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }

  .metric-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
  }

  .metric-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-primary);
    font-family: var(--font-heading);
  }

  /* Development Progress Grid */
  .dev-progress-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
  }

  .progress-column {
    flex: 0 0 350px;
    max-width: 100%;
  }

  .dev-progress-grid .progress-column {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 1.75rem;
    transition: all 0.3s ease;
  }

  .progress-column:hover {
    border-color: rgba(0, 255, 136, 0.3);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.04));
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0, 255, 136, 0.1);
  }

  .column-title {
    font-size: 1.375rem;
    font-family: var(--font-heading);
    color: #fff;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid rgba(255, 255, 255, 0.1);
  }

  .status-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    font-size: 1.125rem;
    font-weight: 700;
  }

  .status-icon.completed {
    background: rgba(0, 255, 136, 0.2);
    color: var(--color-primary);
    border: 2px solid rgba(0, 255, 136, 0.4);
  }

  .status-icon.in-progress {
    background: rgba(0, 170, 255, 0.2);
    color: #00aaff;
    border: 2px solid rgba(0, 170, 255, 0.4);
    animation: rotate 2s linear infinite;
  }

  .status-icon.planned {
    background: rgba(255, 170, 0, 0.2);
    color: #ffaa00;
    border: 2px solid rgba(255, 170, 0, 0.4);
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .milestone-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .milestone-item {
    background: rgba(0, 0, 0, 0.2);
    border-left: 3px solid;
    border-radius: 0.5rem;
    padding: 1rem;
    transition: all 0.3s ease;
  }

  .milestone-item.completed {
    border-color: var(--color-primary);
  }

  .milestone-item.in-progress {
    border-color: #00aaff;
  }

  .milestone-item.planned {
    border-color: #ffaa00;
  }

  .milestone-item:hover {
    background: rgba(0, 0, 0, 0.3);
    transform: translateX(4px);
  }

  .milestone-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .milestone-header strong {
    color: #fff;
    font-size: 1rem;
    font-weight: 700;
    flex: 1;
    min-width: 150px;
  }

  .milestone-date {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
    white-space: nowrap;
  }

  .milestone-desc {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
    margin: 0;
  }

  .priority-badge {
    display: inline-block;
    margin-top: 0.5rem;
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
    font-size: 0.7rem;
