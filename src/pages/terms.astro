  <style>
    .legal-page {
      padding: 4rem 0 6rem;
      min-height: 100vh;
    }

    .page-title {
      font-size: clamp(2.5rem, 6vw, 3.5rem);
      text-align: center;
      margin-bottom: 1rem;
      color: var(--color-primary);
    }

    .last-updated {
      text-align: center;
      color: var(--color-gray);
      font-size: 0.875rem;
      margin-bottom: 3rem;
      font-family: var(--font-heading);
      letter-spacing: 0.05em;
    }

    .legal-section {
      margin-bottom: 3rem;
    }

    .legal-section h2 {
      font-size: 1.75rem;
      margin-bottom: 1rem;
      color: var(--color-primary);
      border-bottom: 2px solid rgba(0, 255, 136, 0.3);
      padding-bottom: 0.5rem;
    }

    .legal-section p {
      line-height: 1.8;
      margin-bottom: 1rem;
      color: rgba(255, 255, 255, 0.9);
    }

    .legal-section ul {
      margin: 1.5rem 0;
      padding-left: 2rem;
    }

    .legal-section li {
      margin-bottom: 1rem;
      line-height: 1.8;
      color: rgba(255, 255, 255, 0.9);
    }

    .legal-section li strong {
      color: var(--color-text);
    }

    .legal-section a {
      color: var(--color-primary);
      text-decoration: underline;
      transition: color 0.2s ease;
    }

    .legal-section a:hover {
      color: var(--color-secondary);
    }

    .legal-notice {
      background: rgba(255, 0, 85, 0.1);
      border: 1px solid rgba(255, 0, 85, 0.3);
      border-radius: 0.5rem;
      padding: 1.5rem;
      margin-top: 4rem;
    }

    .legal-notice p {
      margin: 0;
      color: rgba(255, 255, 255, 0.9);
      line-height: 1.6;
    }

    .legal-notice strong {
      color: var(--color-secondary);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .legal-page {
        padding: 3rem 0 4rem;
      }

      .legal-section h2 {
        font-size: 1.5rem;
      }

      .legal-section ul {
        padding-left: 1.5rem;
      }
    }

    /* Reduce motion for accessibility */
    @media (prefers-reduced-motion: reduce) {
      * {
        transition-duration: 0.01ms !important;
      }
    }
  </style>
</BaseLayout>
