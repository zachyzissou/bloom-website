---
/**
 * Early Access Landing Page
 * High-converting landing page for EA launch announcement
 * Optimized for conversion with urgency elements and clear CTAs
 */
import BaseLayout from '@/layouts/BaseLayout.astro'
import FactionCard from '@/components/FactionCard.astro'
import factionsData from '@/data/factions.json'
import biomesData from '@/data/biomes.json'

// Get EA Launch factions (4 factions available at Early Access)
const eaLaunchFactions = factionsData.factions
  .filter(faction => faction.launchStatus === 'ea-launch')

// Get EA Launch biomes (6 biomes)
const eaLaunchBiomes = biomesData.biomes
  .filter(biome => biome.launchStatus === 'ea-launch')

// Prepare faction data for FactionCard component
const featuredFactions = eaLaunchFactions.map(faction => ({
  name: faction.shortName,
  tagline: faction.philosophy,
  emblem: `/images/factions/${faction.id.toLowerCase()}-emblem.svg`,
  colors: {
    primary: faction.colors.primary,
    secondary: faction.colors.secondary
  },
  href: `/factions#${faction.id}`
}))

// FAQ data
const faqs = [
  {
    question: 'When does Early Access launch?',
    answer: 'Bloom Early Access launches in Q1 2026. Wishlist on Steam to be notified the moment we go live!'
  },
  {
    question: 'How much will it cost?',
    answer: 'Early Access pricing will be announced closer to launch. Early Access players will receive a discount compared to the full release price.'
  },
  {
    question: 'Will my progress carry over to full release?',
    answer: 'Yes! All progress, unlocks, and items earned during Early Access will carry over to the full release.'
  },
  {
    question: 'Can I play solo?',
    answer: 'Absolutely! Bloom supports 1-10 players. Play solo, with friends, or join random squads. The extraction gameplay works for all playstyles.'
  },
  {
    question: 'What comes after Early Access?',
    answer: '6 additional factions and 6 new biomes will be added over two major expansions (Month 3-6 and Month 6-9), leading to full release.'
  },
  {
    question: 'Will there be exclusive Early Access rewards?',
    answer: 'Yes! Early Access supporters will receive exclusive cosmetics, founder badges, and special in-game items not available after full release.'
  }
]
---

<BaseLayout
  title="Early Access Launch - Bloom Extraction FPS | Q1 2026"
  description="Join Bloom's Early Access in Q1 2026. 4 factions, 6 biomes, extraction gameplay. Wishlist now and be among the first to enter the wasteland!"
  type="game"
>
  <!-- Hero Section with Countdown/Urgency -->
  <section class="hero">
    <div class="hero-content">
      <div class="coming-soon-badge">
        <span class="badge-text">Early Access</span>
        <span class="badge-date">Q1 2026</span>
      </div>

      <h1 class="hero-title">Early Access Launch</h1>
      <p class="hero-tagline">Be Among the First to Enter the Wasteland</p>

      <p class="hero-description">
        Experience the brutal extraction shooter where every raid counts.
        Shape the game with your feedback, unlock exclusive rewards, and
        dominate the wasteland before everyone else.
      </p>

      <div class="cta-buttons">
        <a href="https://store.steampowered.com" target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-large">
