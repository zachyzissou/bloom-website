---
/**
 * Audio Consent Modal Component
 * Displays a consent dialog for audio playback on first visit
 * Stores user preference in localStorage
 */
---

<div id="audio-consent-modal" class="modal-overlay hidden" role="dialog" aria-labelledby="audio-consent-title" aria-describedby="audio-consent-description" aria-modal="true">
  <div class="modal-content">
    <div class="modal-header">
      <svg class="modal-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 18V5l12-2v13" />
        <circle cx="6" cy="18" r="3" />
        <circle cx="18" cy="16" r="3" />
      </svg>
      <h2 id="audio-consent-title" class="modal-title">Background Music</h2>
    </div>
    
    <p id="audio-consent-description" class="modal-description">
      Would you like to enable background music? You can toggle it anytime using the music button in the bottom right corner.
    </p>
    
    <div class="modal-actions">
      <button id="audio-consent-deny" class="btn btn-secondary">
        No Thanks
      </button>
      <button id="audio-consent-allow" class="btn btn-primary">
        Enable Music
      </button>
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    padding: 1rem;
    animation: fadeIn 0.3s ease-out;
  }

  .modal-overlay.hidden {
    display: none;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .modal-content {
    background: linear-gradient(135deg, rgba(10, 15, 10, 0.95) 0%, rgba(0, 0, 0, 0.98) 100%);
    border: 2px solid rgba(0, 255, 136, 0.3);
    border-radius: 12px;
    padding: 2rem;
    max-width: 500px;
    width: 100%;
    box-shadow: 0 20px 60px rgba(0, 255, 136, 0.15);
    animation: slideUp 0.3s ease-out;
  }

  .modal-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .modal-icon {
    width: 3rem;
    height: 3rem;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .modal-title {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary);
    margin: 0;
    line-height: 1.2;
  }

  .modal-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .modal-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
  }

  .btn {
    font-family: var(--font-heading);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    border: 2px solid;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    transform: translate(-50%, -50%);
    transition: width 0.4s ease, height 0.4s ease;
  }

  .btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-primary {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #000;
  }

  .btn-primary:hover {
    background: #00cc6a;
    border-color: #00cc6a;
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
    transform: translateY(-2px);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  .btn-secondary {
    background: transparent;
    border-color: rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 0.9);
  }

  .btn-secondary:hover {
    border-color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Focus styles for accessibility */
  .btn:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .modal-content {
      padding: 1.5rem;
    }

    .modal-title {
      font-size: 1.5rem;
    }

    .modal-description {
      font-size: 0.95rem;
    }

    .modal-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .modal-overlay,
    .modal-content,
    .btn {
      animation: none;
      transition: none;
    }
  }
</style>

<script>
  // Audio Consent Modal Controller
  class AudioConsentModalController {
    private modal: HTMLElement | null
    private allowBtn: HTMLElement | null
    private denyBtn: HTMLElement | null
    private consentKey = 'audioConsentGiven'

    constructor() {
      this.modal = document.getElementById('audio-consent-modal')
      this.allowBtn = document.getElementById('audio-consent-allow')
      this.denyBtn = document.getElementById('audio-consent-deny')

      this.init()
    }

    init() {
      if (!this.modal || !this.allowBtn || !this.denyBtn) return

      // Check if consent has been given before
      const consent = localStorage.getItem(this.consentKey)
      
      if (consent === null) {
        // First visit - show modal after a short delay
        setTimeout(() => this.showModal(), 1000)
      }

      // Set up event listeners
      this.allowBtn.addEventListener('click', () => this.handleAllow())
      this.denyBtn.addEventListener('click', () => this.handleDeny())

      // Close on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !this.modal?.classList.contains('hidden')) {
          this.handleDeny()
        }
      })

      // Trap focus within modal when open
      this.modal.addEventListener('keydown', (e) => {
        if (e.key === 'Tab') {
          this.trapFocus(e)
        }
      })
    }

    showModal() {
      this.modal?.classList.remove('hidden')
      // Focus the allow button for keyboard users
      setTimeout(() => this.allowBtn?.focus(), 100)
    }

    hideModal() {
      this.modal?.classList.add('hidden')
    }

    handleAllow() {
      localStorage.setItem(this.consentKey, 'true')
      this.hideModal()
      
      // Dispatch custom event that BackgroundMusic component will listen for
      window.dispatchEvent(new CustomEvent('audioConsentGranted'))
    }

    handleDeny() {
      localStorage.setItem(this.consentKey, 'false')
      this.hideModal()
    }

    trapFocus(e: KeyboardEvent) {
      if (!this.modal || this.modal.classList.contains('hidden')) return

      const focusableElements = this.modal.querySelectorAll(
        'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
      )
      const firstFocusable = focusableElements[0] as HTMLElement
      const lastFocusable = focusableElements[focusableElements.length - 1] as HTMLElement

      if (e.shiftKey) {
        // Shift + Tab
        if (document.activeElement === firstFocusable) {
          e.preventDefault()
          lastFocusable?.focus()
        }
      } else {
        // Tab
        if (document.activeElement === lastFocusable) {
          e.preventDefault()
          firstFocusable?.focus()
        }
      }
    }
  }

  // Initialize on page load
  if (typeof window !== 'undefined') {
    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        new AudioConsentModalController()
      })
    } else {
      new AudioConsentModalController()
    }
  }

  // Re-initialize after View Transitions
  document.addEventListener('astro:after-swap', () => {
    // Don't show modal again if already shown
    const consent = localStorage.getItem('audioConsentGiven')
    if (consent !== null) return
    
    new AudioConsentModalController()
  })
</script>
