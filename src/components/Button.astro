---
interface Props {
  href: string
  variant?: 'primary' | 'secondary' | 'outline'
  size?: 'default' | 'large'
  class?: string
}

const { href, variant = 'primary', size = 'default', class: className = '' } = Astro.props

const baseClasses =
  'inline-flex items-center justify-center rounded-lg border-2 font-heading text-xs sm:text-sm md:text-base font-semibold tracking-[0.08em] uppercase transition-colors transition-shadow duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-black'

const sizeClasses: Record<string, string> = {
  default: 'px-6 py-3 sm:px-7 sm:py-3.5',
  large: 'px-7 py-3.5 sm:px-8 sm:py-4 text-sm sm:text-base'
}

const variantClasses: Record<string, string> = {
  primary:
    'bg-[color:var(--color-primary)] border-[color:var(--color-primary)] text-black shadow-[0_4px_14px_rgba(0,255,136,0.4)] hover:bg-transparent hover:text-[color:var(--color-primary)] hover:shadow-[0_0_20px_rgba(0,255,136,0.4)]',
  secondary:
    'bg-transparent border-[color:var(--color-primary)] text-[color:var(--color-primary)] hover:bg-[color:var(--color-primary)] hover:text-black hover:shadow-[0_0_20px_rgba(0,255,136,0.4)]',
  outline:
    'bg-transparent border-white/20 text-white hover:border-[color:var(--color-primary)] hover:text-[color:var(--color-primary)]'
}
---

<a
  href={href}
  class:list={[baseClasses, sizeClasses[size], variantClasses[variant], className]}
>
  <slot />
</a>

