---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'default' | 'large';
  class?: string;
}

const { href, variant = 'primary', size = 'default', class: className = '' } = Astro.props;
---

<a href={href} class:list={['btn', `btn-${variant}`, `btn-${size}`, className]}>
  <slot />
</a>

<style>
  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    text-align: center;
    border: 2px solid transparent;
  }

  .btn-large {
    padding: 1.25rem 2.5rem;
    font-size: 1.25rem;
  }

  .btn-primary {
    background: var(--color-primary, #00ff88);
    color: #000;
    border-color: var(--color-primary, #00ff88);
  }

  .btn-primary:hover {
    background: transparent;
    color: var(--color-primary, #00ff88);
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-primary, #00ff88);
    border-color: var(--color-primary, #00ff88);
  }

  .btn-secondary:hover {
    background: var(--color-primary, #00ff88);
    color: #000;
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
  }

  .btn-outline {
    background: transparent;
    color: #fff;
    border-color: rgba(255, 255, 255, 0.2);
  }

  .btn-outline:hover {
    border-color: var(--color-primary, #00ff88);
    color: var(--color-primary, #00ff88);
  }
</style>
