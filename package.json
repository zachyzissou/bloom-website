{
  "name": "bloom-marketing-website",
  "version": "1.0.0",
  "description": "Marketing website for Bloom - A post-apocalyptic resource management game",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "dev:sync": "npm run sync:wiki && npm run dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:fast": "astro build",
    "build:skip-sync": "astro check && astro build",
    "prebuild": "npm run sync:wiki && npm run extract:tokens && npm run audit && npm run validate",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "type-check": "astro check",
    "sync:wiki": "node scripts/fetch-wiki-data.mjs && node scripts/transform-wiki-to-json.mjs",
    "extract:tokens": "node scripts/extract-design-tokens.mjs && npx style-dictionary build --config style-dictionary.config.js",
    "audit": "node scripts/audit-content.mjs",
    "validate": "node scripts/validate-data.mjs",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,json,md,mdx,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,json,md,mdx,css,scss}\"",
    "clean": "rm -rf dist .astro node_modules/.vite",
    "lighthouse": "lhci autorun",
    "lighthouse:open": "lhci open",
    "analyze": "astro build --verbose && du -sh dist/",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.2.1",
    "astro": "^4.16.18",
    "astro-robots-txt": "^1.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^6.0.2",
    "@gitbeaker/rest": "^40.0.3",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chroma-js": "^2.6.0",
    "diff2html": "^3.4.52",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "microdiff": "^1.5.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.13.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "sharp": "^0.33.5",
    "string-similarity": "^4.0.4",
    "style-dictionary": "^4.4.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not IE 11",
    "Firefox ESR"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,scss}": [
      "prettier --write"
    ]
  }
}
